add-players
  position:absolute
  width:100%
  height:100%
  background:yellow_color
  overflow:hidden
  ul
    margin:0
    padding:0
    position:relative
    width:1300px
    top:40px
    li
      &.spacer
        width: 113px;
      list-style-type:none
      display:inline-block
      .avatar-img
        width:180px
        img
          max-width:100%

  .avatar-wrap
    position:absolute
    width:100%
    overflow-x:auto
    height:250px
    top:20px
      
  .current-players-wrap
    ul
      top:20px
      text-align:center
      position:relative
      width:auto
      li
        margin:10px
    .player-name
      color:white
      font-size:1.6em
      margin:0
    .avatar-img
      width:140px
  input
    position: absolute;
    top: 50%;
    right: 0;
    border: none;
    outline: none;
    background: none;
    width: 100%;
    height: 60px;
    margin: 0;
    margin-top:-30px
    z-index: 10;
    padding: 20px 65px 30px 0px;
    font-family: inherit;
    font-size: 2em;
    color: white;
    border-bottom:3px solid white
    display:block
    opacity:1
    left: 10%;
    width: 80%;
    placeholder_color = rgba(255, 255, 255, 0.5)
    &::-webkit-input-placeholder 
       color: placeholder_color
    &:-moz-placeholder  /* Firefox 18- */
       color: placeholder_color
    &::-moz-placeholder   /* Firefox 19+ */
       color: placeholder_color
    &:-ms-input-placeholder   
       color: placeholder_color  
    
  .button-group
    position:absolute
    bottom:5%
    width:100%
    text-align:center
    .button
      margin:0 5px